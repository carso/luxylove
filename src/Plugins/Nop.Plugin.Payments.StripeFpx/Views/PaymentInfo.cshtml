@{
    Layout = "";
}
@model Nop.Plugin.Payments.StripeFpx.Models.PaymentInfoModel


<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="bank-tab" data-toggle="tab" href="#bank" role="tab" aria-controls="bank" aria-selected="true">Bank In</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="stripe-tab" data-toggle="tab" href="#stripe" role="tab" aria-controls="stripe" aria-selected="false">Credit Card / FPX</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="ewallet-tab" data-toggle="tab" href="#ewallet" role="tab" aria-controls="ewallet" aria-selected="false">Touch &amp; Go</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="bank" role="tabpanel" aria-labelledby="bank-tab">
        <br />
        <br />

        <h2>Please bank in into:</h2>
        <br />

        <h4>
            Bank Name:  <select asp-for="CreditCardType" asp-items="Model.CreditCardTypes" class="dropdownlists"></select>
        </h4>
        <h4>
            Account Holder: <strong class="text-info">Luxy &amp; Love Postnatal Wellness Home </strong>
        </h4>
        <h4>
            Account No: <strong class="text-info">3223200833 </strong>
        </h4>

        <br />
        <br />

        <p>
            <strong class="text-danger">Important!</strong> <i>Please indicate your phone number for our payment reference. </i>
        </p>

        <br />
        <br />



    </div>
    <div class="tab-pane fade" id="stripe" role="tabpanel" aria-labelledby="stripe-tab">
        <br />
        <br />
        <table width="100%" cellpadding="20" cellspacing="20" style="text-align:center">
            <tr>
                <td style="padding:20px">
                    <img src="~/images/payments/creditcard.png" width="400" />
                </td>
                <td style="padding:20px">
                    <img style="padding:20px" src="~/images/payments/fpx.jpg" width="400" />
                </td>

            </tr>
            <tr>
                <td align="center" style="text-align:center">
                    <br />
                    <br />

                    <h2>@T("Payment.SelectPaymentOption"):</h2>
                    <h2>
                        <select asp-for="CreditCardType" asp-items="Model.PaymentOptions" class="dropdownlists"></select>
                    </h2>
                </td>
            </tr>
        </table>
        <br />

    </div>
    <div class="tab-pane fade" id="ewallet" role="tabpanel" aria-labelledby="ewallet-tab">
        <br />
        <br />
        <table width="100%" cellpadding="20" cellspacing="20" style="text-align:center">
            <tr>
                <td style="text-align:center">
                    <img style="padding:20px" src="~/images/payments/tng.jpg" width="700" />
                </td>


            </tr>
            <tr>
                <td align="center" style="text-align:center">
                    <br />
                    <br />

                    <h4>@T("Payment.SelectEWallet")</h4>
                    <h2>
                        <select asp-for="CreditCardType" asp-items="Model.EWallet" class="dropdownlists"></select>
                    </h2>

                </td>
            </tr>
        </table>
        <br />



    </div>
</div>




<script asp-location="Footer">

    $(document).ready(function () {

        $(".dropdownlists").val("bankin").change();

        $('#myTab a').on('click', function (e) {
            e.preventDefault()
            $(this).tab('show');

            if ($(this).attr('id') == 'ewallet-tab') {
                $(".dropdownlists").val("tng").change();
            } else {
                if ($(this).attr('id') == 'bank-tab') {
                    $(".dropdownlists").val("bankin").change();
                } else {
                    $(".dropdownlists").val("-1").change();
                }



               
            }
        });


    });
</script>